@model MyCinema.Models.Movie

@{
    ViewBag.Title = "Movie-Delete";
}
<h3>Are you sure you want to delete this Movie?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Movie Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt>
            Movie Duration
        </dt>
        <dd>
            @Html.DisplayFor(model => model.duration) minutes
        </dd>
        <dt>
            Picture
        </dt>
        <dd>
            @if (Model.picture != null && Model.picture.Length > 0)
            {
                <img src="data:image;base64,@System.Convert.ToBase64String(Model.picture)" style="max-height: 150px; max-width: 300px;" />
            }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Back to List", "Index") |
            <input type="submit" value="Delete" class="btn btn-outline-dark" />
        </div>
    }
</div>
