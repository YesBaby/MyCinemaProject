@model MyCinema.Models.Cinema

@{
    ViewBag.Title = "Cinemas-Edit";
}

<h2>Edit Cinema</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-md-10">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.Label("Cinema name", htmlAttributes: new { @class = "control-label font-weight-bold" })
            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("Cinema address", htmlAttributes: new { @class = "control-label font-weight-bold" })
            @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <span class="mr-5">@Html.ActionLink("Back to List", "Index")</span>
            <span class="ml-5">
                         <input type="submit" value="Save" class="btn btn-outline-dark" />
            </span>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
