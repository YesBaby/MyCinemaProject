@model IEnumerable<MyCinema.Models.Room>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Room ID")
        </th>
        <th>
            @Html.Label("Cinema name")
        </th>
        <th>
            @Html.Label("Seats")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cinema.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Seat.Count) (@Html.ActionLink("Go to Seats", "Index", "Seats"))
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
